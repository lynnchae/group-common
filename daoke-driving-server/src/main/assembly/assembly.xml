<?xml version="1.0" encoding="UTF-8"?>
<assembly>
    <id>bin</id>
    <formats>
        <format>zip</format>
    </formats>
    <dependencySets>
        <dependencySet>
            <!--<useProjectArtifact>true</useProjectArtifact>-->
            <scope>runtime</scope>
            <!--最终打包至输出包内的lib路径下（由 outputDirectory指定） -->
            <outputDirectory>lib</outputDirectory>
        </dependencySet>
    </dependencySets>
    <fileSets>
        <fileSet>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>README.txt</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>src/main/scripts</directory>
            <!--脚本放到那个目录-->
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>runMileage.sh</include>
                <include>runDriving.sh</include>
                <include>runHistoryMileage.sh</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>
